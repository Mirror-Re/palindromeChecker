extends layout

block content
  h1 Palindrome Checker
  form(method="POST" action="/")
    label(for="userText") Enter your text here:
    br
    input(type="text" id="userText" name="userText" value=`${phrase}`)
    br
    br
    button(type="submit") Submit
  if message
    p=message
    br
    p Examples: "Madam, Im Adam" || "Dont nod" || "Step on no pets" || "Was it a cat I saw"